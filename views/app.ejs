<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TO DO List</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
 <!--date and day,,box class and heading id added  --> 
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>            
    </div>
    
 <!--List section,,box class and heading id added  --> 
<div class="box">



       <% newListItem.forEach(function(element){ %>
         <form action="/delete" method="post">
            <div class="item"> 
                <input type="checkbox" name="cb" id="3344" onChange="this.form.submit()" value="<%= element._id %>">           
                <p > <%= element.name %>    </p>
            </div>

         </form>
           
       <% }) %>

       

       

        <!-- Here we form section,-->
        <form class="" action="/" method="post">
            <input type="text" name="newItem" placeholder="New item " autocomplete="off">  <!-- placeholder added,autocomplete -->
            <button type="submit">+</button>
        </form>
    
</div>
    
    
    


   

</body>
</html>
